<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    tools:context="de.tr0llhoehle.disease.MainActivity">

    <fragment
        android:id="@+id/map"
        android:name="de.tr0llhoehle.disease.MapsActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="de.tr0llhoehle.disease.MainActivity" />

    <include layout="@layout/portrait" android:id="@+id/portrait" />
    <include layout="@layout/landscape" android:id="@+id/landscape" android:visibility="gone" />
